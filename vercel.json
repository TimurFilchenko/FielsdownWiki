{
  "version": 2,
  
  // *** ВАЖНОЕ ИЗМЕНЕНИЕ: Удалили секцию "builds". ***
  // Vercel теперь будет автоматически определять и обслуживать 
  // статические файлы (HTML/CSS/JS) без ошибки, так как не будет 
  // требовать конкретный инструмент сборки.
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    { 
      "source": "/index", 
      "destination": "/index.html" 
    },
    { 
      "source": "/wiki", 
      "destination": "/wiki.html" 
    }
  ]
}
